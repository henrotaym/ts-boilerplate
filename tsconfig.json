{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "lib": ["es2015"],
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
